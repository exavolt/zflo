{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@zflo/api-format": ["./packages/api-format/src"],
      "@zflo/api-viz": ["./packages/api-viz/src"],
      "@zflo/core": ["./packages/core/src"],
      "@zflo/format-dot": ["./packages/format-dot/src"],
      "@zflo/format-mermaid": ["./packages/format-mermaid/src"],
      "@zflo/format-plantuml": ["./packages/format-plantuml/src"],
      "@zflo/format-zflojson": ["./packages/format-zflojson/src"],
      "@zflo/integ-telegram": ["./packages/integ-telegram/src"],
      "@zflo/platform-core": ["./packages/platform-core/src"],
      "@zflo/react": ["packages/react/src"],
      "@zflo/react-web": ["./packages/react-web/src"],
      "@zflo/ui-react-tw": ["packages/ui-react-tw/src"],
      "@zflo/viz-reactflow": ["./packages/viz-reactflow/src"],
      "@zflo/viz-mermaid": ["./packages/viz-mermaid/src"]
    }
  },
  "include": [],
  "references": [
    { "path": "./packages/api-format" },
    { "path": "./packages/api-viz" },
    { "path": "./packages/core" },
    { "path": "./packages/format-dot" },
    { "path": "./packages/format-mermaid" },
    { "path": "./packages/format-plantuml" },
    { "path": "./packages/format-zflojson" },
    { "path": "./packages/integ-telegram" },
    { "path": "./packages/platform-core" },
    { "path": "./packages/react" },
    { "path": "./packages/react-web" },
    { "path": "./packages/ui-react-tw" },
    { "path": "./packages/viz-reactflow" },
    { "path": "./packages/viz-mermaid" },
    { "path": "./apps/play" },
    { "path": "./apps/editor" },
    { "path": "./apps/play-cli" },
    { "path": "./apps/telegram-bot" },
    { "path": "./apps/website" }
  ]
}
