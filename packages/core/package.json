{
  "name": "@zflo/core",
  "version": "0.3.0",
  "description": "Core package for zflo flow execution framework",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsup src/index.ts --format cjs,esm --external eventemitter3",
    "dev": "tsc --build --watch & tsup src/index.ts --format cjs,esm --external eventemitter3 --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cel-js": "^0.8.2",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "expert-system",
    "decision-tree",
    "flowchart",
    "state-management",
    "interactive",
    "rule-based-system",
    "rule-engine"
  ],
  "author": "zflo Team",
  "license": "MIT"
}
