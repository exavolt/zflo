{
  "name": "@zflo/viz-mermaid",
  "version": "0.1.0",
  "description": "Mermaid-based visualization components for ZFlo flows",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsup src/index.ts --format cjs,esm --external react,react-dom,mermaid,@zflo/core,@zflo/format-mermaid",
    "dev": "tsc --watch --project tsconfig.build.json",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@zflo/core": "workspace:*",
    "@zflo/format-mermaid": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "mermaid": "^11.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "mermaid": "^11.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
