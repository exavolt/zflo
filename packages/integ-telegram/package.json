{
  "name": "@zflo/integ-telegram",
  "version": "0.1.0",
  "description": "Telegram bot integration for ZFlo flows",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsup src/index.ts --format cjs,esm --dts --external @zflo/core,typescript-telegram-bot-api",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external @zflo/core,typescript-telegram-bot-api --watch",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@zflo/core": "workspace:*",
    "typescript-telegram-bot-api": "^0.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "author": "zflo Team",
  "license": "MIT",
  "keywords": [
    "telegram",
    "bot",
    "integration",
    "zflo",
    "flow"
  ]
}
