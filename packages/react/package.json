{
  "name": "@zflo/react",
  "version": "0.4.0",
  "description": "React components and hooks for zflo",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && tsup src/index.ts --format cjs,esm --external react,@zflo/core",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react,@zflo/core --watch",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@zflo/core": "workspace:*"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "tsup": "^8.3.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "react",
    "flowchart",
    "interactive",
    "expert-system"
  ],
  "author": "ZFlo Team",
  "license": "MIT"
}
