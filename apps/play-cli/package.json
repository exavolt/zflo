{
  "name": "@zflo/play-cli",
  "version": "0.1.0",
  "description": "CLI tool for playing ZFlo flows in the terminal",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zflo-play": "dist/index.js"
  },
  "scripts": {
    "build": "pnpm -C ../../packages/core build && tsc",
    "dev": "pnpm build && node dist/index.js",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@zflo/core": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "inquirer": "^10.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "zflo",
    "cli",
    "terminal",
    "flow",
    "interactive"
  ],
  "author": "ZFlo Team",
  "license": "MIT"
}
