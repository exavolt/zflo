{
  "name": "@zflo/telegram-bot",
  "version": "0.1.0",
  "description": "CLI tool to run ZFlo flows as Telegram bots",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zflo-telegram-bot": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/cli.js",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@zflo/core": "workspace:*",
    "@zflo/api-format": "workspace:*",
    "@zflo/format-mermaid": "workspace:*",
    "@zflo/format-dot": "workspace:*",
    "@zflo/format-plantuml": "workspace:*",
    "@zflo/format-zflojson": "workspace:*",
    "@zflo/integ-telegram": "workspace:*",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "flowchart",
    "zflo",
    "cli"
  ],
  "author": "ZFlo Team",
  "license": "MIT"
}
